    "html.format.unformatted": null, // フレージング・コンテンツ（旧インライン要素のようなタグ）はフォーマットしない  
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.configuration-editing",
    "editor.formatOnPaste": true
}